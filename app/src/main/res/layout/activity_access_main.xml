<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AccessMain">

    <TextView
        android:id="@+id/access_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="필요한 접근 권한 목록입니다."
        android:textSize="16sp"
        android:textColor="@color/busblue"
        android:textStyle="bold"/>


    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/access_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="= 인터넷(필수)"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/access_first_contents"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="데이터 사용,실시간 정보 조회 기능 사용에 필요합니다."
         android:textSize="14sp"
        android:textColor="@color/black" />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/access_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="= 외부 저장소 읽기,쓰기(선택)"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/access_second_contents"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="사용자 DB(정보), 게시판 이용과 관련해 필요합니다."
        android:textSize="14sp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/AccessBtn"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:onClick="clickAccess"
        android:text="권한요청"
        android:textSize="14sp" />

    <TextView
        android:layout_marginTop="40dp"
        android:id="@+id/access_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="= 위치 정보 수집(선택)"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/access_third_contents"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="사용자 DB(정보), 위치 확인과 관련해 필요합니다."
        android:textSize="14sp"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/AccessBtn2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:onClick="clickAccess2"
        android:text="권한요청"
        android:textSize="14sp" />


    <Button
        android:id="@+id/AccessBtn3"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:includeFontPadding="false"
        android:onClick="clickAccess3"
        android:text="권한요청"
        android:textSize="14sp" />
</LinearLayout>