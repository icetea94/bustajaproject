<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Bussearch">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvinfo_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="조회를 원하는 버스 번호와 정류소 번호를\n 입력하시면 아래화면에 도착정보가 나타납니다."  />

        <EditText
            android:id="@+id/busNum"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_below="@+id/tvinfo_search"
            android:layout_marginBottom="50dp"
            android:background="@null"
            android:ems="10"
            android:hint="버스 번호 입력"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/busblue"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/stationArsno"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_below="@+id/busNum"
            android:background="@null"
            android:ems="10"
            android:hint="정류소 번호 입력"
            android:inputType="textPersonName"
            android:text=""
            android:textColor="@color/busblue"
            android:textColorHint="@color/black" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="right"
            android:layout_weight="2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:onClick="search2"
            android:text="노선 검색으로 이동"
            android:drawableTint="@color/busblue"
            android:textColor="@color/busblue"/>
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginTop="150dp"
            android:layout_weight="2"
            android:background="@color/white"
            android:onClick="search"
            android:text="검색하기"
            android:drawableLeft="@drawable/ic_directions_bus_black_24dp"
            android:drawableTint="@color/busblue"
            android:textColor="@color/busblue"/>


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/busblue">

        <TextView
            android:id="@+id/showInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="도착정보 안내"
            android:textColorHint="@color/black"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20dp" />
    </ScrollView>

</LinearLayout>
