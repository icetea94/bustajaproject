<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099FF"
    android:clickable="true"
    tools:context=".Intro">

    <ImageView
        android:id="@+id/iv_maincloud1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_cloud_white_24dp" />
    <ImageView
        android:id="@+id/iv_maincloud2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:src="@drawable/ic_cloud_white_24dp" />
    <ImageView
        android:id="@+id/iv_maincloud3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="140dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="100dp"
        android:src="@drawable/ic_cloud_white_24dp" />

    <ImageView
        android:id="@+id/iv_mainbus"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_directions_bus_black_24dp" />

    <com.example.bustaja.MyFontTextView
        android:id="@+id/tv_mainbus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_mainbus"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:text="버스 타자" />

</RelativeLayout>