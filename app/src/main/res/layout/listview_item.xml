<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="52dp"

    android:layout_margin="2dp"     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#FFFFFF"
        android:orientation="vertical"

        android:layout_margin="2dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/item_tv_num"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:text="busnum"
            android:textColor="@color/busblue"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="bus_stop_name"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="#8B00FF"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/item_tv_num"
            android:layout_marginLeft="10dp"
            android:paddingLeft="8dp"/>
        <TextView
            android:id="@+id/item_tv_turn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/item_tv_name"
            android:layout_marginLeft="10dp"
            android:paddingLeft="8dp"/>
        <TextView
            android:id="@+id/item_tv_Id"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/item_tv_name"
            android:layout_marginLeft="10dp"
            android:paddingLeft="8dp"/>
        <TextView
            android:id="@+id/item_tv_y"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/item_tv_name"
            android:layout_marginLeft="10dp"
            android:paddingLeft="8dp"/>
        <TextView
            android:id="@+id/item_tv_x"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text=""
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/item_tv_name"
            android:layout_marginLeft="10dp"
            android:paddingLeft="8dp"/>

        <ImageView android:id="@+id/item_img"
            android:layout_marginTop="8dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            android:src="@drawable/ic_directions_bus_black_24dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>



</androidx.cardview.widget.CardView>

