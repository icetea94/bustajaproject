<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:enabled="true"
        android:id="@+id/edittext_dialog_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColorHint="@color/busblue"
        android:textColor="@color/black"
        android:maxLines="1"
        android:lines = "1"
        android:singleLine = "true"
        android:hint="제목을 입력하세요."
        android:inputType="text"/>

    <EditText
        android:enabled="true"
        android:id="@+id/edittext_dialog_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:maxLines="10"
        android:textColorHint="@color/busblue"

        android:textColor="@color/black"
        android:inputType="textMultiLine"
        android:maxLength="100"
        android:hint="내용을 입력하세요."/>
    <TextView
        android:id="@+id/replace_nickid_tv"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="80dp"
        android:text="닉네임자리"
        android:maxLength="20"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/replace_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/replace_nickid_tv"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:text="날짜"
        android:textColor="@color/black" />


    <Button
        android:background="@color/busblue"
        android:id="@+id/button_dialog_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textColor="@color/white"
        android:text="수정" />



</LinearLayout>