<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Appbar">
        <!-- 앱바 배경색 -->
        <!-- 제목 글씨 색상 -->
        <item name="titleTextColor">@color/white</item>
        <item name="colorPrimary">@color/busblue</item>
        <!-- 액션바의 메뉴아이템들 색상 -->
        <item name="colorControlNormal">@color/white</item>
        <item name= "subtitleTextColor">@color/white</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="loading">
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">400</item>
    </style>



</resources>
